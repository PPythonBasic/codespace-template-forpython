{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "postCreateCommand": "pip3 install --user -r requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "njpwerner.autodocstring",
                "ms-python.black-formatter",
                "PKief.material-icon-theme",
                "ritwickdey.LiveServer",
                "wholroyd.jinja"
            ]
        },
        "codespaces": {
            "extensions": [
                "ms-python.python",
                "njpwerner.autodocstring",
                "ms-python.black-formatter",
                "PKief.material-icon-theme"
            ],
